<Window x:Class="InfluxDemo.Client.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Main Window"
		Height="350"
		Width="250"
		WindowStartupLocation="CenterScreen">

	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Margin"
					Value="5,5,5,0" />
			<Setter Property="Padding"
					Value="3" />
		</Style>
	</Window.Resources>

	<StackPanel x:Name="panelMain"
				Orientation="Vertical">
		<DockPanel LastChildFill="True"
				   Margin="5,5,5,0">
			<TextBlock Text="DB Type"
					   Margin="5" />
			<ComboBox x:Name="comboDbType"
					  SelectionChanged="ComboDbType_SelectionChanged"
					  SelectedIndex="0">
				<ComboBoxItem>OSS</ComboBoxItem>
				<ComboBoxItem>Cloud</ComboBoxItem>
			</ComboBox>
		</DockPanel>
		<Button Content="Heath Check"
				Click="HeathButton_Click" />
		<Button Content="Ready Check"
				Click="ReadyButton_Click" />
	</StackPanel>
</Window>

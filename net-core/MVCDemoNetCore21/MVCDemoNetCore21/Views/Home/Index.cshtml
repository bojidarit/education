<div id="testModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sm">
    <!-- Modal content-->
    <div class="modal-content">
      <!-- Header -->
      <div class="modal-header bg-custom-modal-accent modal-header-round-corners">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title font-weight-bold">Just navigation list</h4>
      </div>
      <!-- Body -->
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12 modal_body_map">
            <div id="someList" class="list-group">
              <a href="#" class="list-group-item list-group-item-action" data-toggle="tooltip" title="Shows [Home] in separate page"
                 onclick="window.open('@Url.Action("Index", "Home")', '_blank').focus();">Home</a>
              <a href="#" class="list-group-item list-group-item-action" data-toggle="tooltip" title="Shows [About] in separate page"
                 onclick="window.open('@Url.Action("About", "Home")', '_blank').focus();">About</a>
              <a href="#" class="list-group-item list-group-item-action" data-toggle="tooltip" title="Shows [Contact] in separate page"
                 onclick="window.open('@Url.Action("Contact", "Home")', '_blank').focus();">Contact</a>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <div class="modal-footer bg-custom-modal-accent modal-footer-round-corners">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

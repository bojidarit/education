@{

}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - MVCBootstrapDotNet5</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <!-- Bootstrap icons 1.5.0 -->
  <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVCBootstrapDotNet5</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="text-wrap container">
      <span class="badge bg-secondary">
        &copy; 2021 - MVCBootstrapDotNet5 - <a class="text-warning" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
      </span>
      <span class="badge bg-info">
        <i class="bi bi-asterisk"></i>
        @($"Environment: v.{System.Environment.Version}")
      </span>
      <span class="badge bg-info">
        <i class="bi bi-asterisk"></i>
        @($"Framework: {System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription}")
      </span>
      <span class="badge bg-info">
        <i class="bi bi-asterisk"></i>
        @($"Target: {AppDomain.CurrentDomain.SetupInformation.TargetFrameworkName}")
      </span>
      <span class="badge bg-info">
        <i class="bi bi-asterisk"></i>
        <a href="#" class="text-primary" onclick="openBootstrapPage();">Bootstrap v5.0.1</a>
      </span>
      <span class="badge bg-info">
        <i class="bi bi-asterisk"></i>
        <a href="#" class="text-primary" onclick="openBootstrapIconsPage();">Bootstrap icons 1.5.0</a>
        (<a href="#" class="text-primary" onclick="openAllIconsLocal();">local copy list</a>)
      </span>
    </div>
  </footer>
  <script type="text/javascript">
    function openBootstrapPage() {
      window.open('https://getbootstrap.com/', '_blank').focus();
    };
    function openBootstrapIconsPage() {
      window.open('https://icons.getbootstrap.com/', '_blank').focus();
    };
    function openAllIconsLocal() {
      window.open('/lib/bootstrap-icons/index.html', '_blank').focus();
    };
  </script>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
